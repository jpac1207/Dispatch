<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
</head>
<body>
    @*<div>
            <img src="~/Content/Images/galpao.jpg" class="headerImage" align="middle"/>
        </div>*@
    <div class="navbar navbar-inverse navbar-fixed-top standardGreen">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema de Expedições", "Index", "Home", new { area = "" }, new { @class = "navbar-brand whiteFont" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="whiteFont">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="whiteFont">@Html.ActionLink("Envio de Materiais", "MultipleSend", "Envios")</li>
                    <li class="whiteFont">@Html.ActionLink("Pendentes / Confirmação", "Index", "Envios", new { status = 2}, new { })</li>       
                    <li class="whiteFont">@Html.ActionLink("Relatório", "Index", "Envios")</li>                   
                    <li class="whiteFont">@Html.ActionLink("Gráficos", "Index", "Report")</li>
                    <li class="whiteFont">@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li class="whiteFont">@Html.ActionLink("Contato", "Contact", "Home")</li>
                    <li class="whiteFont btn-primary">@Html.ActionLink("Exportar Base", "ExportAll", "Envios")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema de Expedições</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/utilService")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/mask")
    <script>
        $(".date").mask('00/00/0000');
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
